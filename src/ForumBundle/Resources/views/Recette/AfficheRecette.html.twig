{% extends'@Forum/Default/index.html.twig' %}


{% block containt %}
    <fieldset>
    <legend><h3>Liste des Recettes</h3></legend>

    <table border="0">
        <tr>
            <th>Nom Recette</th><TH>Préparation</TH><th>Besoin</th><th>Durée</th><th>Catégorie</th><th>Supprimer cette Recette</th>
            <th>Modifier cette Recette</th>
        </tr>
        {% for rece in R %}
            <tr>

                <td><a href="{{ path('pi_forum_affiche_Commantaire',{'id':rece.id}) }}">{{ rece.nom }}</a></td>
                <td>{{ rece.preparation }}</td>
                <td>{{ rece.besoin }}</td>
                <td>{{ rece.duree }}</td>
                <td>{{ rece.categorie.nom }}</td>
                <td><a href="{{ path('pi_forum_modif_recette',{'id':rece.id}) }}">Modifier</a></td>
                <td><a href="{{ path('pi_forum_supprimv_recette',{'id':rece.id}) }}">Supprimer</a></td>

            </tr>
        {% endfor %}
    </table>
</fieldset>
{% endblock %}
